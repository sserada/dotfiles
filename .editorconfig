# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Default: 2 space indentation (matches neovim, stylua, prettier)
[*]
indent_style = space
indent_size = 2

# Lua files (matches stylua.toml)
[*.lua]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,zsh,bash}]
indent_style = space
indent_size = 2

# JavaScript/TypeScript (matches prettier)
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_style = space
indent_size = 2

# JSON, YAML (matches prettier)
[*.{json,yaml,yml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Markdown uses trailing spaces for line breaks

# Makefiles require tabs
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab
